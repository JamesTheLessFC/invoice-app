model Item {
  id        Int     @id @default(autoincrement())
  name      String?
  quantity  Int?
  price     Float?
  invoice   Invoice @relation(fields: [invoiceId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  invoiceId String
}

model Invoice {
  id            String   @id @default(cuid())
  createdAt     DateTime @default(now())
  paymentDue    DateTime
  invoiceDate   DateTime @default(now())
  description   String?
  paymentTerms  Int      @default(30)
  clientName    String?
  clientEmail   String?
  status        Status   @default(DRAFT)
  senderName    String?
  senderStreet  String?
  senderStreet2 String?
  senderCity    String?
  senderState   State?
  senderZip     String?
  senderCountry String   @default("United States")
  clientStreet  String?
  clientStreet2 String?
  clientCity    String?
  clientState   State?
  clientZip     String?
  clientCountry String   @default("United States")
  items         Item[]
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId        String
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime? @map("email_verified")
  image         String?
  accounts      Account[]
  sessions      Session[]
  invoices      Invoice[]

  @@map("users")
}

model Account {
  id                 String  @id @default(cuid())
  userId             String  @map("user_id")
  type               String
  provider           String
  providerAccountId  String  @map("provider_account_id")
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verificationtokens")
}